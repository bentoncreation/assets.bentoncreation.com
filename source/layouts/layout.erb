  <body {block:IndexPage}class="index"{/block:IndexPage}>

    <header role="banner">
      <div class="wrapper">
        <div id="tagline"><a href="/">Jeremy A. Smith is <em>Bent on Creation</em></a></div>

        <div id="location">Currently based in Asheville, NC</div>

        <div id="close"><a href="#">Close</a></div>
        <div id="hidden">
        </div>
        <div style="clear:both;"></div>
      </div>
    </header>

    <div id="container">
      <div class="container-top"></div>
      <div class="container-wrapper">
        <div class="wrapper">

          <aside>
            <nav role="navigation">
              <a href="/" id="logo"></a>

              <ul id="main">
                <li class="current"><a href="/">Blog</a></li>
                <li><a href="#" id="about">About</a></li>
                <li><a href="/work">Work</a></li>
                <li><a href="mailto:jeremy@bentoncreation.com">Email</a></li>
                {block:Pages}
                  <li><a href="{URL}">{Label}</a></li>
                {/block:Pages}
              </ul>
            </nav>

            <div class="description">
              {block:Description}
                <h2>About Jeremy</h2>
                <div class="me"></div>
                {Description}
              {/block:Description}
            </div>
          </aside>

          <article>
            <%= yield %>
          </article>

          <footer>
            <p>Copyright &copy; 2014. <a href="/">Bent on Creation</a>. All rights reserved. <a href="{RSS}">Subscribe via RSS</a></p>
          </footer>

        </div>
      </div>
    </div>

  </body>
